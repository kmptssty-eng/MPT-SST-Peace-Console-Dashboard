    <script>
        // Initial values
        let currentCase = 'community';
        
        // Case study data
        const cases = {
            postConflict: {
                name: "Post-Conflict Zone",
                values: [40, 35, 30, 40, 35, 30],
                message: "High dissonance, structural damage, low trust"
            },
            corporate: {
                name: "Corporate Ethics Crisis",
                values: [70, 65, 90, 80, 85, 75],
                message: "Structural compliance high but consciousness low"
            },
            community: {
                name: "Community Organization",
                values: [80, 60, 85, 75, 70, 80],
                message: "Good relational resonance, structural challenges"
            },
            reset: {
                name: "Custom Scenario",
                values: [50, 50, 50, 50, 50, 50],
                message: "Adjust sliders to create your own scenario"
            }
        };
        
        // Initialize function
        function initializeDashboard() {
            updateCRI();
            document.getElementById('caseStatus').textContent = 'Current: Community Organization';
        }
        
        // Update CRI based on slider values
        function updateCRI() {
            // Get all slider values
            const selfAwareness = parseInt(document.getElementById('selfAwareness').value);
            const worldview = parseInt(document.getElementById('worldview').value);
            const empathic = parseInt(document.getElementById('empathic').value);
            const dialogic = parseInt(document.getElementById('dialogic').value);
            const equity = parseInt(document.getElementById('equity').value);
            const participatory = parseInt(document.getElementById('participatory').value);
            
            // Update value displays
            document.getElementById('selfAwarenessValue').textContent = selfAwareness;
            document.getElementById('worldviewValue').textContent = worldview;
            document.getElementById('empathicValue').textContent = empathic;
            document.getElementById('dialogicValue').textContent = dialogic;
            document.getElementById('equityValue').textContent = equity;
            document.getElementById('participatoryValue').textContent = participatory;
            
            // Calculate CRI (weighted average)
            const cri = Math.round(
                (selfAwareness * 0.15) +
                (worldview * 0.15) +
                (empathic * 0.20) +
                (dialogic * 0.20) +
                (equity * 0.15) +
                (participatory * 0.15)
            );
            
            // Update CRI display
            document.getElementById('criScore').textContent = cri;
            document.getElementById('criIndicator').style.left = cri + '%';
            
            // Color code based on value
            const criElement = document.getElementById('criScore');
            if (cri < 40) {
                criElement.style.color = '#e74c3c';
            } else if (cri < 70) {
                criElement.style.color = '#f39c12';
            } else {
                criElement.style.color = '#2ecc71';
            }
        }
        
        // Load a case study
        function loadCase(caseId) {
            currentCase = caseId;
            const caseData = cases[caseId];
            
            // Set slider values
            document.getElementById('selfAwareness').value = caseData.values[0];
            document.getElementById('worldview').value = caseData.values[1];
            document.getElementById('empathic').value = caseData.values[2];
            document.getElementById('dialogic').value = caseData.values[3];
            document.getElementById('equity').value = caseData.values[4];
            document.getElementById('participatory').value = caseData.values[5];
            
            // Update display
            document.getElementById('caseStatus').textContent = `Current: ${caseData.name} - ${caseData.message}`;
            
            // Update CRI
            updateCRI();
        }
        
        // Apply interventions
        function applyIntervention(type) {
            let message = "";
            
            switch(type) {
                case 'truth':
                    // Increase dialogic and equity
                    document.getElementById('dialogic').value = Math.min(100, parseInt(document.getElementById('dialogic').value) + 15);
                    document.getElementById('equity').value = Math.min(100, parseInt(document.getElementById('equity').value) + 10);
                    message = "Truth Commission applied: +15 Dialogic Quality, +10 Equity-Permeation";
                    break;
                    
                case 'dialogue':
                    // Increase self-awareness and empathic
                    document.getElementById('selfAwareness').value = Math.min(100, parseInt(document.getElementById('selfAwareness').value) + 12);
                    document.getElementById('empathic').value = Math.min(100, parseInt(document.getElementById('empathic').value) + 10);
                    message = "Dialogue Circles applied: +12 Self-Awareness, +10 Empathic Density";
                    break;
                    
                case 'reform':
                    // Increase equity and participatory
                    document.getElementById('equity').value = Math.min(100, parseInt(document.getElementById('equity').value) + 20);
                    document.getElementById('participatory').value = Math.min(100, parseInt(document.getElementById('participatory').value) + 15);
                    message = "Structural Reform applied: +20 Equity-Permeation, +15 Participatory Design";
                    break;
                    
                case 'education':
                    // Increase all consciousness factors
                    document.getElementById('selfAwareness').value = Math.min(100, parseInt(document.getElementById('selfAwareness').value) + 10);
                    document.getElementById('worldview').value = Math.min(100, parseInt(document.getElementById('worldview').value) + 8);
                    document.getElementById('empathic').value = Math.min(100, parseInt(document.getElementById('empathic').value) + 10);
                    message = "Consciousness Education applied: +10 Self-Awareness, +8 Worldview Coherence, +10 Empathic Density";
                    break;
                    
                case 'resetAll':
                    loadCase(currentCase);
                    message = "Reset to current case study values";
                    break;
            }
            
            // Update display
            document.getElementById('interventionStatus').textContent = message;
            
            // Update CRI
            updateCRI();
            
            // Show temporary confirmation
            setTimeout(() => {
                document.getElementById('interventionStatus').textContent = "Intervention applied. Adjust sliders or try another.";
            }, 3000);
        }
        
        // Initialize when page loads
        window.onload = initializeDashboard;
    </script>
</body>
</html>
