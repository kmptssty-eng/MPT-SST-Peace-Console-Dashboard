        .cri-display { text-align: center; margin: 30px 0; }
        .cri-value { font-size: 72px; color: #2c3e50; font-weight: bold; }
        .cri-bar { width: 80%; height: 30px; background: linear-gradient(to right, #e74c3c, #f39c12, #2ecc71); margin: 20px auto; border-radius: 15px; position: relative; }
        .cri-indicator { position: absolute; top: -5px; width: 40px; height: 40px; background: #2c3e50; border-radius: 50%; transition: left 0.5s; }
        
        .controls { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; }
        .control-group { padding: 15px; background: white; border-radius: 8px; box-shadow: 0 3px 10px rgba(0,0,0,0.1); }
        
        .slider-container { margin: 15px 0; }
        label { display: block; margin-bottom: 5px; color: #555; }
        input[type="range"] { width: 100%; }
        .value-display { text-align: center; font-size: 24px; color: #2c3e50; margin: 10px 0; }
        
        .cases { display: flex; gap: 10px; margin: 20px 0; }
        .case-btn { padding: 10px 20px; background: #3498db; color: white; border: none; border-radius: 5px; cursor: pointer; }
        .case-btn:hover { background: #2980b9; }
        
        .interventions { display: flex; gap: 10px; margin: 20px 0; flex-wrap: wrap; }
        .int-btn { padding: 10px 15px; background: #2ecc71; color: white; border: none; border-radius: 5px; cursor: pointer; }
        .int-btn:hover { background: #27ae60; }
        
        .status { text-align: center; padding: 10px; background: #e8f4fd; border-radius: 5px; margin: 20px 0; }
